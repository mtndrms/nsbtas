<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.fragments.ConfirmAndProceedPaymentFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Servis"
            android:textColor="@color/primary_text_color"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/secondary_text_color"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/customer_info"
            android:textColor="@color/primary_text_color"
            android:textSize="20sp" />

        <TableLayout
            android:id="@style/ConfirmInfoTableLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1">

            <TableRow android:layout_marginTop="5dp">

                <TextView
                    style="@style/ConfirmInfoTableLayoutStyle.Titles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Firma Adı"
                    android:textAlignment="viewStart" />

                <TextView
                    android:id="@+id/tvCompanyName"
                    style="@style/ConfirmInfoTableLayoutStyle.Values"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="viewEnd" />
            </TableRow>

            <TableRow android:layout_marginTop="5dp">

                <TextView
                    style="@style/ConfirmInfoTableLayoutStyle.Titles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Müşteri Adı"
                    android:textAlignment="viewStart" />

                <TextView
                    android:id="@+id/tvCustomerName"
                    style="@style/ConfirmInfoTableLayoutStyle.Values"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="viewEnd" />
            </TableRow>

            <TableRow android:layout_marginTop="5dp">

                <TextView
                    style="@style/ConfirmInfoTableLayoutStyle.Titles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Telefon Numarası"
                    android:textAlignment="viewStart" />

                <TextView
                    android:id="@+id/tvPhoneNumber"
                    style="@style/ConfirmInfoTableLayoutStyle.Values"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="viewEnd" />
            </TableRow>

            <TableRow android:layout_marginTop="5dp">

                <TextView
                    style="@style/ConfirmInfoTableLayoutStyle.Titles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="E-Posta Adresi"
                    android:textAlignment="viewStart" />

                <TextView
                    android:id="@+id/tvEmailAddress"
                    style="@style/ConfirmInfoTableLayoutStyle.Values"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="viewEnd" />
            </TableRow>

            <TableRow android:layout_marginTop="5dp">

                <TextView
                    style="@style/ConfirmInfoTableLayoutStyle.Titles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Notunuz"
                    android:textAlignment="viewStart" />

                <TextView
                    android:id="@+id/tvNote"
                    style="@style/ConfirmInfoTableLayoutStyle.Values"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="viewEnd" />
            </TableRow>

            <TableRow android:layout_marginTop="5dp">

                <TextView
                    style="@style/ConfirmInfoTableLayoutStyle.Titles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adresiniz"
                    android:textAlignment="viewStart" />

                <TextView
                    android:id="@+id/tvAddress"
                    style="@style/ConfirmInfoTableLayoutStyle.Values"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="viewEnd" />
            </TableRow>
        </TableLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/card_info"
            android:textColor="@color/primary_text_color"
            android:textSize="20sp" />

        <TableLayout
            android:id="@style/ConfirmInfoTableLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1">

            <TableRow android:layout_marginTop="5dp">

                <TextView
                    style="@style/ConfirmInfoTableLayoutStyle.Titles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kart Sahibinin Adı Soyadı"
                    android:textAlignment="viewStart" />

                <TextView
                    android:id="@+id/tvCardOwnerInfo"
                    style="@style/ConfirmInfoTableLayoutStyle.Values"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="viewEnd" />
            </TableRow>

            <TableRow android:layout_marginTop="5dp">

                <TextView
                    style="@style/ConfirmInfoTableLayoutStyle.Titles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kart Numarası"
                    android:textAlignment="viewStart" />

                <TextView
                    android:id="@+id/tvCardNumber"
                    style="@style/ConfirmInfoTableLayoutStyle.Values"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="viewEnd" />
            </TableRow>

            <TableRow android:layout_marginTop="5dp">

                <TextView
                    style="@style/ConfirmInfoTableLayoutStyle.Titles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Son Kullanma Tarihi"
                    android:textAlignment="viewStart" />

                <TextView
                    android:id="@+id/tvCardExpDate"
                    style="@style/ConfirmInfoTableLayoutStyle.Values"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="viewEnd" />
            </TableRow>

            <TableRow android:layout_marginTop="5dp">

                <TextView
                    style="@style/ConfirmInfoTableLayoutStyle.Titles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CVV"
                    android:textAlignment="viewStart" />

                <TextView
                    android:id="@+id/tvCardCVV"
                    style="@style/ConfirmInfoTableLayoutStyle.Values"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="viewEnd" />
            </TableRow>
        </TableLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Ödenecek Tutar"
            android:textColor="@color/primary_text_color"
            android:textSize="20sp" />

        <TableLayout
            android:id="@style/ConfirmInfoTableLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:stretchColumns="1">

            <TableRow android:layout_marginTop="5dp">

                <TextView
                    style="@style/ConfirmInfoTableLayoutStyle.Titles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tutar"
                    android:textAlignment="viewStart" />

                <TextView
                    android:id="@+id/tvAmount"
                    style="@style/ConfirmInfoTableLayoutStyle.Values"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="viewEnd" />
            </TableRow>
        </TableLayout>
    </LinearLayout>
</ScrollView>